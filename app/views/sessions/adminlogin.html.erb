<% flash.each do |type, msg| %>
  <% if msg==""%>
    <div>
    <%= msg %>
    </div>
  <% else %>
  <div class="alert alert-warning text-center">
    <%= msg %>
  </div>
  <% end %>
<% end %>

<div class="container card col-sm-4 my-4 p-4">
  <h2 class="d-flex justify-content-center align-items-center">Admin Log In</h2>
  <form method="POST" action="<%= checkadminlogin_path %>">
  <%= token_tag %>
    <div class="mb-3">
      <label for="username">Username</label>
      <input type="text" name="username" id="username" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="password">Password</label>
      <input type="password" name="password" id="password" class="form-control" required>
    </div>

    <div class=" d-flex justify-content-right align-items-right">
      <input type="submit" value="Login" class="btn btn-primary">
    </div>
  </form>
</div>